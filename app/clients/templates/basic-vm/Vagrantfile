Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"  # Base box to use

  # Network configuration
  config.vm.network "private_network", type: "dhcp"

  # Provisioning script
  config.vm.provision "shell", path: "scripts/provision.sh"

  # Custom VM settings can be loaded from a YAML configuration file
  config.vm.provider "libvirt" do |lv|
    lv.memory = 2048  # Memory in MB
    lv.cpus = 2      # Number of CPUs
    lv.disk_bus = "virtio"
  end
end