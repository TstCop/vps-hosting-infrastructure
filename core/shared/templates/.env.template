# Environment Configuration Template
# Copy to .env and customize for your environment

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
APP_NAME=vps-infrastructure-app

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=https://your-domain.com,https://136.243.208.131
SESSION_SECRET=your-super-secret-session-key-change-this

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=changeme

# External Services
GITLAB_URL=http://10.0.0.10
GITLAB_TOKEN=your-gitlab-token

# Monitoring
NETDATA_URL=http://localhost:19999
PROMETHEUS_URL=http://localhost:9100

# Network Configuration
PRIVATE_NETWORK=10.0.0.0/24
PUBLIC_NETWORK=136.243.208.128/29

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Notification Settings
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_USER=notifications@your-domain.com
# EMAIL_PASS=your-email-password
# ADMIN_EMAIL=admin@your-domain.com

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/your-domain.crt
SSL_KEY_PATH=/etc/nginx/ssl/your-domain.key

# Performance Tuning
MAX_MEMORY_RESTART=1G
PM2_INSTANCES=max
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60
